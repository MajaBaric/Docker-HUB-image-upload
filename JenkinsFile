pipeline {
  agent any

  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerHUB')
  }
  stages {
    stage('Build') {
	agent { dockerfile true }
      steps {
        sh 'docker build -t majabaric/jenkins-docker-hub https://github.com/MajaBaric/Docker-HUB-image-upload.git'
      }
    }
    stage('Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Push') {
      steps {
        sh 'docker push majabaric/jenkins-docker-hub'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}

